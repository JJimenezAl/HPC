dnf install slurm-slurmdbd mariadb-server

systemctl enable --now mariadb
mysql_secure_installation



mysql -u root -p 

CREATE DATABASE slurm_acct_db;
CREATE USER 'slurm'@'localhost' IDENTIFIED BY 'StrongPass123!';
GRANT ALL PRIVILEGES ON slurm_acct_db.* TO 'slurm'@'localhost';
FLUSH PRIVILEGES;
EXIT;


#al arrancar servicio fallan ficheros de pid
los creo manual y cambio permisis root:slurm



#test


mysql -u slurm -p -h localhost slurm_acct_db

SELECT user, host, plugin FROM mysql.user WHERE user='slurm';

expected output 

+--------+-----------+-----------------------+
| user   | host      | plugin                |
+--------+-----------+-----------------------+
| slurm  | localhost | mysql_native_password |
+--------+-----------+-----------------------+



